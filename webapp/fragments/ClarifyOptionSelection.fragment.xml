<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout"
	xmlns:t="sap.ui.table" onAfterclose="requoteClose">
	<Dialog title="Clarify Order">
		<content>
			<VBox width="100%" visible="true">
				<Text text="Comments" class="sapUiTinyMarginBegin"/>
				<TextArea value="" growing="true" growingMaxLines="7" width="100%"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="Submit" press="onClarifySubmit"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onClarifyCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>