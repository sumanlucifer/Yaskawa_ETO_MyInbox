<mvc:View controllerName="com.yaskawa.ETOMyInbox.controller.Worklist" height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f">
	<f:DynamicPage showFooter="true" headerExpanded="true" busy="{objectViewModel>/busy}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title id="pageTitle" text="{i18n>ETOMyInbox}"/>
				</f:heading>
				<f:actions>
					<HBox visible="{= ${objectViewModel>/isButtonVisible} ? true : true}">
						<Button text="{i18n>Search}" id="idBtnSubmit" class="sapUiTinyMarginBegin" press="onSearch" type="Emphasized"/>
						<Button text="{i18n>Reset}" class="sapUiTinyMarginBegin" press="onReset"/>
					</HBox>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<core:Fragment fragmentName="com.yaskawa.ETOMyInbox.view.fragments.filterbar" type="XML"/>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- DynamicPage Content -->
		<f:content>
			<core:Fragment fragmentName="com.yaskawa.ETOMyInbox.view.fragments.SmartTable" type="XML"/>
		</f:content>
		<f:footer>
			<OverflowToolbar >
				<ToolbarSpacer/>
				<Button text="Accept" type="Emphasized" id="btn-01" press="onPressAcceptButton"/>
				<Button text="Reassign" type="Emphasized" id="btn-02" press="onReassignButtonPress"/>
				<Button text="Refresh" type="Emphasized" id="onListGetData3" press="onRefresh"/>
				<Button text="Winshuttle" type="Emphasized" id="onListGetData4" press="onWinshuttlePress"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>