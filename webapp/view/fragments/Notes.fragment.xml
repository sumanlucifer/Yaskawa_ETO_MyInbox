<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout"
	xmlns:t="sap.ui.table">
	<Dialog title="Please Enter Notes">
		<content>
			<VBox class="sapUiTinyMargin" renderType="Bare">
				<VBox >
					<Label text="Write notes here"/>
					<TextArea id="TextArea2" cols="100" height="100px"/>
				</VBox>
			</VBox>
		</content>
		<beginButton>
			<Button text="Ok" press="onPressOk"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onPressCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>